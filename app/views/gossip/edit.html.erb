<body>
    <div class="header"></div>
        <div class="title">
            <h1>The Gossip Project</h1>
            <div>
                <h6>><a href="/">Accueil</h6></a>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Update this Gossip</a>
            </div>
        </nav>
    </div>



    <div class="main">
        <div class="main">
            <div class="page content col-7">
                <%= form_tag url_for(action: 'update'), method: "patch" do %>
    
                <%= label_tag 'Gossip Title' %>
                <%= text_field_tag 'title', @gossip.title %>
            
                <%= label_tag 'Gossip Content' %>
                <%= text_area_tag 'content', @gossip.content %>
                  
                <%= submit_tag 'Update Gossip' %>
              
              <% end %>
            </div>
        </div>
    </div>
</body>