<body>
    <div class="header"></div>
        <div class="title">
            <h1>The Gossip Project</h1>
            <div>
                <h6>><a href="/">Accueil</h6></a>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">Gossip n°: <%= @gossip.id %></a>
            </div>
        </nav>
    </div>



    <div class="main">
        <p></p>
        <p><strong>Title</strong></p>
            <%= @gossip.title %>
        <p></p>
        <p><strong>Content</strong></p>
            <%= @gossip.content %>
        <br>
        <br>
        <br>
        <p><strong><em>From</em></strong></p>
            <a href="/user/<%= @gossip.user_id %>"><%= @gossip.user.first_name %> <%= @gossip.user.last_name %></a><br>
            <a href="<%= city_path(@gossip.user.city.id) %>"><em><%= @gossip.user.city.name %></em></a>
        <br>
        <br>        
        <button><a href="<%= edit_gossip_path(@gossip.id) %>">Update</a></button>
        <button><a href="<%= gossip_path(@gossip.id) %>" data-confirm="êtes-vous sur?" data-method="DELETE">Delete</a></button>
        <br>
        <br>
        <div class="page content col-7">
            <%= form_tag url_for(action: 'show'), method: "post" do %>
            
            <%= label_tag 'Comments:' %>
            <%= text_area_tag 'comment' %>
            
            <%= submit_tag 'Post comment' %>
            
            <% end %>
        </div>
    </div>
</body>